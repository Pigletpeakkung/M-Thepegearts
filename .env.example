# ==============================================
# THEPEGEARTS ENVIRONMENT VARIABLES EXAMPLE
# ==============================================
# Copy this file to .env and fill in your values
# Never commit .env files to version control
# ==============================================

# Required - Site Configuration
SITE_URL=https://your-domain.vercel.app
AUTHOR_EMAIL=your-email@example.com
CONTACT_EMAIL=your-email@example.com

# Optional - Analytics (Get from respective services)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Optional - Search (Algolia)
ALGOLIA_APP_ID=YOUR_APP_ID
ALGOLIA_SEARCH_KEY=your-search-only-api-key
ALGOLIA_INDEX_NAME=your_index_name

# Optional - Email Service (EmailJS)
EMAILJS_SERVICE_ID=service_xxxxxxx
EMAILJS_TEMPLATE_ID=template_xxxxxxx
EMAILJS_PUBLIC_KEY=your-public-key

# Optional - Image Optimization (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional - Error Tracking (Sentry)
SENTRY_DSN=https://your-dsn@sentry.io/project-id

# Feature Flags (true/false)
ENABLE_PWA=true
ENABLE_ANALYTICS=true
ENABLE_SEARCH=true
DEFAULT_THEME=dark

# Social Media
TWITTER_HANDLE=@yourusername
LINKEDIN_URL=https://linkedin.com/in/yourusername
PORTFOLIO_URL=https://yourportfolio.com

# GitHub
GITHUB_USERNAME=yourusername
GITHUB_REPO_URL=https://github.com/yourusername/yourrepo

# Build Settings
NODE_ENV=production
BUILD_COMMAND="npm run build"
