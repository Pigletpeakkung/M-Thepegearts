// Export the portfolio data
export default portfolioData;

// Additional utility functions for working with portfolio data
export const portfolioUtils = {
    // Get projects by category
    getProjectsByCategory: (category) => {
        return portfolioData.projects.filter(project => project.category === category);
    },

    // Get featured projects
    getFeaturedProjects: () => {
        return portfolioData.projects.filter(project => project.featured);
    },

    // Get projects by status
    getProjectsByStatus: (status) => {
        return portfolioData.projects.filter(project => project.status === status);
    },

    // Get recent projects
    getRecentProjects: (limit = 6) => {
        return portfolioData.projects
            .sort((a, b) => new Date(b.endDate) - new Date(a.endDate))
            .slice(0, limit);
    },

    // Get project by ID
    getProjectById: (id) => {
        return portfolioData.projects.find(project => project.id === id);
    },

    // Get project by slug
    getProjectBySlug: (slug) => {
        return portfolioData.projects.find(project => project.slug === slug);
    },

    // Search projects
    searchProjects: (query) => {
        const searchTerm = query.toLowerCase();
        return portfolioData.projects.filter(project => {
            const searchableText = [
                project.title,
                project.description.short,
                project.client.name,
                ...project.tags,
                ...project.technologies.primary
            ].join(' ').toLowerCase();
            
            return searchableText.includes(searchTerm);
        });
    },

    // Get related projects
    getRelatedProjects: (currentProject, limit = 3) => {
        return portfolioData.projects
            .filter(project => 
                project.id !== currentProject.id && 
                (project.category === currentProject.category ||
                 project.tags.some(tag => currentProject.tags.includes(tag)))
            )
            .slice(0, limit);
    },

    // Get skills by category
    getSkillsByCategory: (category) => {
        return portfolioData.skills[category] || null;
    },

    // Calculate portfolio statistics
    calculateStats: () => {
        const projects = portfolioData.projects;
        const now = new Date();
        
        return {
            totalProjects: projects.length,
            completedProjects: projects.filter(p => p.status === 'completed').length,
            inProgressProjects: projects.filter(p => p.status === 'in-progress').length,
            upcomingProjects: projects.filter(p => p.status === 'upcoming').length,
            averageProjectDuration: portfolioUtils.calculateAverageProjectDuration(),
            categoriesCount: Object.keys(portfolioData.skills).length,
            technologiesUsed: portfolioUtils.getAllTechnologies().length
        };
    },

    // Get all technologies used across projects
    getAllTechnologies: () => {
        const technologies = new Set();
        portfolioData.projects.forEach(project => {
            project.technologies.primary.forEach(tech => technologies.add(tech));
            project.technologies.secondary.forEach(tech => technologies.add(tech));
        });
        return Array.from(technologies);
    },

    // Calculate average project duration
    calculateAverageProjectDuration: () => {
        const durations = portfolioData.projects
            .filter(p => p.startDate && p.endDate)
            .map(p => {
                const start = new Date(p.startDate);
                const end = new Date(p.endDate);
                return Math.ceil((end - start) / (1000 * 60 * 60 * 24 * 7)); // weeks
            });
        
        const average = durations.reduce((a, b) => a + b, 0) / durations.length;
        return Math.round(average);
    },

    // Generate portfolio summary
    generateSummary: () => {
        const stats = portfolioUtils.calculateStats();
        const categories = Object.keys(portfolioData.skills);
        
        return {
            overview: `${stats.totalProjects} projects completed across ${categories.length} service categories`,
            expertise: categories.map(cat => portfolioData.skills[cat].title),
            achievements: portfolioData.recognition.map(r => r.title),
            clientSatisfaction: portfolioData.stats.clientSatisfactionRate
        };
    }
};

